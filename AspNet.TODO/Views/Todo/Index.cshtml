@model IEnumerable<AspNet.TODO.Models.Todo>

@{
    ViewData["Title"] = "Todo app";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>TO-DO list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Add new task</a>
        </div>
    </div>
</div>

<br /><br />

<table class="table table-hover">
    <thead> 
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th></th>
        </tr>
    </thead>
    
@foreach (var item in Model) 
{
        <partial name="_ItemRowPartial" model="item" />
}
</table>
